<Window x:Class="Campaign.BloodGroupShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Campaign"
        mc:Ignorable="d"
        Title="BloodGroupShow" Height="450" Width="800">
    <Grid Background="Bisque">
        <Label Content="Select The Blood Group You want " FontSize="18" HorizontalAlignment="Left" Margin="205,10,0,0" VerticalAlignment="Top" Height="92" Width="390"/>
        <ComboBox Name="MyComboBox" HorizontalAlignment="Left" Margin="225,102,0,0" VerticalAlignment="Top" Width="263" Height="45" RenderTransformOrigin="0.498,1.094">
            <ComboBoxItem Content="A+" FontSize="18"/>
            <ComboBoxItem Content="A-" FontSize="18"/>
            <ComboBoxItem Content="B+" FontSize="18"/>
            <ComboBoxItem Content="B-" FontSize="18"/>
            <ComboBoxItem Content="O+"  FontSize="18"/>
            <ComboBoxItem Content="O-" FontSize="18"/>
            <ComboBoxItem Content="AB+" FontSize="18"/>
            <ComboBoxItem Content="AB-" FontSize="18"/>
        </ComboBox>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="327,197,0,0" VerticalAlignment="Top" Width="75" Height="42" Click="Button_Click"/>

    </Grid>
</Window>
