<Window x:Class="Campaign.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Campaign"
        mc:Ignorable="d"
        Title="LogIn" Height="450" Width="800">
    <Grid Background="Bisque">
        <Label Content="User Name" HorizontalAlignment="Left" FontSize="14" Margin="122,123,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" FontSize="14" Margin="122,193,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="txtpassword" HorizontalAlignment="Left" FontSize="14" Margin="328,193,0,0" Width="100" VerticalAlignment="Top" RenderTransformOrigin="-0.13,-1.512"/>
        <TextBox Name="txtusername" HorizontalAlignment="Left"  Height="23" Margin="328,132,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Log In" Foreground="Black" HorizontalAlignment="Left" FontSize="16" Margin="255,236,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="101,300,0,0" VerticalAlignment="Top" Width="88" Click="Button_Click_1"/>

    </Grid>
</Window>
